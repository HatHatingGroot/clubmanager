<mapper namespace = "com.clubmanager.mapper.ReplyMapper">


	<select id="getList" resultType="com.clubmanager.domain.ReplyVO">
		select /*+ INDEX(tbl_reply idx_reply) */ *
		from tbl_reply
		where boardNo = #{boardNo}
		
	</select>
	
	<insert id="insert">
		insert into tbl_reply(replyWriter, replyContent, boardNo) 
		values(#{replyWriter},#{replyContent},#{boardNo})
	</insert>
	
